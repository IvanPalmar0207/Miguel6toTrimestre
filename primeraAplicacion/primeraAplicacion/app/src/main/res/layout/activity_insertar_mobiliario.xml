<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="925dp"
        android:backgroundTint="#FFFFFF"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="25dp"
            android:fontFamily="@font/roboto_black"
            android:text="Agregar Mobiliario"
            android:textAlignment="center"
            android:textColor="@color/green"
            android:textSize="45dp"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="43dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="100dp"
            android:textSize="22dp"
            android:textAlignment="textStart"
            android:fontFamily="@font/roboto_mediumitalic"
            android:text="Tipo de habitacion:">
        </TextView>


        <Spinner
            android:id="@+id/codigo_tpH"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="35dp"
            android:backgroundTint="@color/green"
            android:textAlignment="center"></Spinner>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="43dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="50dp"
            android:textSize="22dp"
            android:textAlignment="textStart"
            android:fontFamily="@font/roboto_mediumitalic"
            android:text="Paquete de mobiliario:">
        </TextView>


        <Spinner
            android:id="@+id/codigo_pMb"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="35dp"
            android:backgroundTint="@color/green"
            android:textAlignment="center"></Spinner>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="137dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="50dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnAgregarMobiliario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="-40dp"
            android:layout_marginRight="25dp"
            android:backgroundTint="@color/green"
            android:fontFamily="@font/roboto_black"
            android:text="Agregar"
            android:textSize="25dp"></Button>

        <TextView
            android:id="@+id/btnVolverMobiliario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25px"
            android:fontFamily="@font/roboto_medium"
            android:text="Gestion de mobiliario"
            android:textAlignment="center"></TextView>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>