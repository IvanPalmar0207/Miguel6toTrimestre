<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menuPrincipal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="25dp"
            android:textSize="45dp"
            android:textAlignment="center"
            android:fontFamily="@font/roboto_black"
            android:textColor="@color/green"
            android:text="HOTEL PEGASUS">
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="54dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:text="En este  apartado de nuestra aplicacion se podra hacer toda la gestion de tres diferentes modulos existentes del sistema los cuales son usuarios, reservas y habitaciones pudiendo hacer las acciones de insercion, actualizacion, eliminacion y seleccion de los registros."
            android:textAlignment="center"
            android:textSize="18dp"
            ></TextView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnUsuarios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="200dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/green"
            android:fontFamily="@font/roboto_black"
            android:text="Gestion de Usuarios"
            android:textSize="22dp"
            app:icon="@drawable/hotel"
            app:iconGravity="end"
            app:iconSize="30dp"></Button>

        <Button
            android:id="@+id/btnReservas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/green"
            android:fontFamily="@font/roboto_black"
            android:text="Gestion de Reservas"
            android:textSize="22dp"
            app:icon="@drawable/baseline_how_to_reg_24"
            app:iconGravity="end"
            app:iconSize="30dp"></Button>

        <Button
            android:id="@+id/btnHabitaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/green"
            android:fontFamily="@font/roboto_black"
            android:text="Gestion de Habitaciones"
            android:textSize="22dp"
            app:icon="@drawable/baseline_update_24"
            app:iconGravity="end"
            app:iconSize="30dp"></Button>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <Button
            android:id="@+id/btnSalirPrincipal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="70dp"
            android:layout_marginBottom="50dp"
            android:backgroundTint="#FF813C"
            android:fontFamily="@font/roboto_black"
            android:text="Salir del sistema"
            android:textSize="22dp"
            app:icon="@drawable/baseline_logout_24"
            app:iconGravity="end"
            app:iconSize="30dp"
            app:layout_anchor="@+id/linearLayout2"
            app:layout_anchorGravity="center"></Button>


    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>